<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_5"
    tools:context="com.pcce.mithya.mithya2017.Splash">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_splash"
        android:gravity="center"
        android:background="@drawable/animation_splash">
        <ImageView
            android:layout_width="200dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/pcce"/>
        <TextView
            android:id="@+id/presents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="presents"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"

            android:background="@drawable/logot"
               />

    </LinearLayout>
</LinearLayout>
